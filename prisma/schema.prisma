// This is your Prisma schema file
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String?
  avatar        String?
  emailVerified DateTime?

  // Role-based access
  role          String    @default("USER") // USER, ADMIN

  // Subscription (String instead of enum for SQLite)
  plan          String    @default("FREE") // FREE, PRO, ENTERPRISE
  planExpiry    DateTime?

  // Usage tracking
  projectsCount Int       @default(0)
  aiUsageCount  Int       @default(0)
  storageUsed   Int       @default(0)

  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  lastLoginAt   DateTime?

  // Relations
  projects      Project[]
  sessions      Session[]
  apiKeys       ApiKey[]
  usageLogs     UsageLog[]
  projectVersions ProjectVersion[]
  collaborations ProjectCollaborator[]

  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  userAgent String?
  ipAddress String?

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  thumbnail   String?

  // Content (String instead of Json for SQLite - will be serialized JSON)
  data        String   @default("{}")

  // Dimensions
  width       Int      @default(1920)
  height      Int      @default(1080)

  // Metadata (String instead of enum for SQLite)
  status      String   @default("DRAFT") // DRAFT, PUBLISHED, ARCHIVED
  visibility  String   @default("PRIVATE") // PRIVATE, PUBLIC, UNLISTED

  // Stats
  viewsCount     Int      @default(0)
  downloadsCount Int      @default(0)

  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  publishedAt DateTime?

  // Relations
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  versions    ProjectVersion[]
  collaborators ProjectCollaborator[]

  @@map("projects")
}

model ProjectVersion {
  id          String   @id @default(cuid())
  projectId   String
  version     Int
  data        String   // JSON string
  description String?
  createdAt   DateTime @default(now())
  createdById String

  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdBy   User     @relation(fields: [createdById], references: [id])

  @@unique([projectId, version])
  @@map("project_versions")
}

model ProjectCollaborator {
  id          String   @id @default(cuid())
  projectId   String
  userId      String
  role        String   @default("VIEWER") // OWNER, ADMIN, EDITOR, VIEWER
  addedAt     DateTime @default(now())
  addedById   String?

  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
  @@map("project_collaborators")
}

model ApiKey {
  id        String   @id @default(cuid())
  userId    String
  key       String   @unique
  name      String
  lastUsed  DateTime?
  expiresAt DateTime?
  createdAt DateTime @default(now())
  isActive  Boolean  @default(true)

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("api_keys")
}

model UsageLog {
  id        String   @id @default(cuid())
  userId    String
  action    String   // PROJECT_CREATE, PROJECT_UPDATE, AI_GENERATE_TEXT, etc.
  metadata  String?  // JSON string
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("usage_logs")
}
