# Environment Variables

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/billboard_app?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production"

# JWT
JWT_SECRET="your-jwt-secret-change-this-in-production"

# Email (for verification and notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@billboard-marketing.com"

# AI Services
GOOGLE_AI_API_KEY="your_google_ai_api_key_here"
OPENAI_API_KEY="your_openai_api_key_here"
REPLICATE_API_KEY="your_replicate_api_key_here"

# Storage (AWS S3, Cloudinary, or similar)
STORAGE_PROVIDER="local" # local, s3, cloudinary
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret"
AWS_REGION="us-east-1"
AWS_BUCKET_NAME="billboard-assets"

# Stripe (for payments)
STRIPE_PUBLIC_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Rate Limiting
RATE_LIMIT_WINDOW="15" # minutes
RATE_LIMIT_MAX_REQUESTS="100"

# Feature Flags
ENABLE_AI_FEATURES="true"
ENABLE_COLLABORATION="true"
ENABLE_EXPORTS="true"

# App Configuration
NODE_ENV="development"
APP_URL="http://localhost:3000"
